/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    /* Import alias */
    "baseUrl": "./src",
    "paths": {
      "@/components/*": [
        "./app/components/*"
      ],
      "@/pages/*": [
        "./app/pages/*"
      ],
      "@/guards/*": [
        "./app/guards/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/store/*": [
        "./store/*"
      ],
      "@/types/*": [
        "./types/*"
      ],
      "@/interfaces/*": [
        "./interfaces/*"
      ],
      "@/assets/*": [
        "./assets/*"
      ],
      "@/environments/*": [
        "./environments/*"
      ],
      "@/constants/*": [
        "./constants/*"
      ],
      "@/amplify/*": [
        ".././amplify/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
